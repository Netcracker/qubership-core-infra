{
  "separateMinorPatch": true,
  "packageRules": [
    {
      "matchPackageNames": [
        "/.*/"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "addLabels": [
        "type:major"
      ],
      "enabled": false
    },
    {
      "matchPackageNames": [
        "/.*/"
      ],
      "matchUpdateTypes": [
        "minor"
      ],
      "addLabels": [
        "type:minor"
      ],
      "enabled": true
    },
    {
      "matchPackageNames": [
        "/.*/"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "addLabels": [
        "type:patch"
      ],
      "enabled": true
    }
  ]
}