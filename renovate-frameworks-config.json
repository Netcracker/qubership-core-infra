{
  "labels": [
    "renovate:core",
    "branch:main"
  ],
  "separateMinorPatch": true,
  "separateMajorMinor": true,
  "packageRules": [
    {
      "matchPackageNames": [
        "/.*/"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "addLabels": [
        "type:major"
      ],
      "enabled": true
    },
    {
      "matchPackageNames": [
        "/.*/"
      ],
      "matchUpdateTypes": [
        "minor"
      ],
      "addLabels": [
        "type:minor"
      ],
      "enabled": true
    },
    {
      "matchPackageNames": [
        "/.*/"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "addLabels": [
        "type:patch"
      ],
      "enabled": true
    }
  ]
}